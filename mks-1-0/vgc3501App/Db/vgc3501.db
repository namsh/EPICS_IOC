record(bo, "$(P)$(R):Filament1") 
{
    field(DESC, "Trun filament on or off")
    field(DTYP, "stream")
    field( OUT, "@vgc3501.proto setD(#F1) $(PORT) $(A)")
    field(ZNAM, "Off")
    field(ONAM, "On")
    field(PINI, "YES")
    field( VAL, "0")
}

record(bo, "$(P)$(R):Filament2") 
{
    field(DESC, "Trun filament on or off")
    field(DTYP, "stream")
    field( OUT, "@vgc3501.proto setD(#F2) $(PORT) $(A)")
    field(ZNAM, "Off")
    field(ONAM, "On")
    field(PINI, "YES")
    field( VAL, "0")
}

record(mbbi, "$(P)$(R):GaugeStatus") 
{
    field(DESC, "Display ion gauge status")
    field(DTYP, "stream")
    field( INP, "@vgc3501.proto status $(PORT) $(A)")
    field(ZRST, "Filament off")
    field(ZRVL, "0")
    field(ONST, "Filament1 on")
    field(ONVL, "1")
    field(TWST, "Filament2 on")
    field(TWVL, "2")
}
