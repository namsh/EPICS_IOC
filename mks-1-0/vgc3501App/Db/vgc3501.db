record(ai, "$(P)$(R):MeasureTop") 
{
    field(DESC, "Measure top display pressure")
    field(DTYP, "stream")
    field( INP, "@vgc3501.proto measurePressure1 $(PORT) $(A)")
    field( EGU, "Torr")
    field(PREC, "5")
    field(SCAN, "1 second")
}

