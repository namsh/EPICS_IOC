record(bo, "$(P)$(R):OFFSET") 
{
    field(DESC, "Trun filament on or off")
    field(DTYP, "stream")
    field( OUT, "@E4419B.proto setD(CALC:GAIN:STAT) $(PORT) $(A)")
    field(ZNAM, "OFF")
    field(ONAM, "ON")
    field(PINI, "YES")
    field( VAL, "0")
}

